@model List<WorkoutTracker.Models.Instructor>

@{
    ViewBag.Title = "Instructor";
}

<h2>Instructors</h2>

<table class="table">

@if (Model.Count > 0)
{
    <tr>
        <th><strong>Name</strong></th>
        <th><strong></strong></th>
    </tr>
}

@foreach (var instructor in Model)
{
    <tr>
        <td>@instructor.Name</td>
        <td><a asp-controller="Instructor" asp-action="Edit" asp-route-instructorID="@instructor.ID">Edit</a> | 
            <a asp-controller="Instructor" asp-action="Remove" asp-route-instructorID="@instructor.ID">Remove</a></td>
    </tr>
}

</table>


@if (Model.Count == 0)
{
    <p>No instructors yet!</p>
}

<div>
    <p><a asp-controller="Instructor" asp-action="Add">Add an Instructor</a></p>
</div>
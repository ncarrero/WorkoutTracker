@model WorkoutTracker.ViewModels.EditCategoryViewModel

@{
    ViewBag.Title = "Edit Location";
}

<h1>Edit Location</h1>

<form method="post">

    <div class="form-group row">
        <div class="col-xs-3">
            <label for="Name">Name</label>
            <input class="form-control" name="Name" id="@Model.Name" value="@Model.Name" type="text" />
            <input type="hidden" value="@Model.ID" name="ID" />
        </div>
    </div>

    <input type="submit" value="Submit" />

</form>
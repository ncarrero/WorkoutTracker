@model WorkoutTracker.ViewModels.AddCategoryViewModel

@{ 
    ViewBag.Title = "Add Instructor";
}

<h1>Add a New Instructor</h1>

<form asp-controller="Instructor" asp-action="Add" method="post">

    <div class="form-group row">
        <div class="col-xs-3">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <input type="submit" value="Submit" />
    </div>

</form>

<br />

<div class="form-group row">
    <a asp-controller="Instructor" asp-action="Index">Go Back</a>
</div>
@model WorkoutTracker.Models.ClassType

@{
    ViewBag.Title = "Remove Class Type";
}

<h1>Remove a Class Type</h1>

<p>Are you sure you would like to delete this class type?  Please check box below and submit.</p>

<div class="form-group">
    <form method="post">
        <input type="checkbox" name="classTypeID" id="@Model.ID" value="@Model.ID" />
        <label for=" @Model.ID">@Model.Name</label>
        <br />

    <div class="form-group">
        <input type="submit" value="Submit" />
    </div>
    </form>
</div>
<br />

<div>
    <form>
        <input type="button" value="Go Back" onclick="history.back()" />
    </form>
</div>